{
  "name": "locavista",
  "version": "1.0.0",
  "description": "LocaVista - Travel and Activity Discovery Platform",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "bash build.sh",
    "vercel-build": "bash build.sh",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install --legacy-peer-deps --no-package-lock"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "travel",
    "activities",
    "tourism",
    "mern"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
